<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="UnusedAttribute">

    <data>

        <variable
            name="isTeam"
            type="boolean" />

        <variable
            name="rowText"
            type="String" />

        <variable
            name="alliance"
            type="com.fsilberberg.common.Alliance" />

        <variable
            name="team"
            type="com.fsilberberg.ftamonitor.fieldmonitor.TeamStatus" />

        <import type="com.fsilberberg.ftamonitor.common.Alliance" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@{team.alliance.equals(Alliance.RED) ? @color/FMS_RED : @color/FMS_BLUE}"
            android:columnCount="8"
            android:padding="10dp"
            android:rowCount="2"
            android:useDefaultMargins="true"
            tools:background="@color/FMS_RED">

            <TextView
                android:id="@+id/row_number"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_row="0"
                android:text="@{rowText}"
                android:textColor="@color/white_text"
                tools:text="Red 1" />

            <TextView
                android:layout_column="0"
                android:layout_row="1"
                android:text="#:"
                android:textColor="@color/white_text" />

            <TextView
                android:layout_column="1"
                android:layout_row="1"
                android:text="@{team.number}"
                android:textColor="@color/white_text"
                tools:text="3218" />

            <TextView
                android:layout_column="2"
                android:layout_columnSpan="2"
                android:layout_row="0"
                android:text="Status:"
                android:textColor="@color/white_text" />

            <TextView
                android:id="@+id/team_status_text"
                android:layout_column="4"
                android:layout_columnSpan="4"
                android:layout_row="0"
                android:textColor="@color/white_text"
                tools:text="No RoboRIO" />

            <TextView
                android:layout_column="2"
                android:layout_row="0"
                android:text="BW:"
                android:textColor="@color/white_text"
                android:visibility="invisible" />

            <TextView
                android:layout_column="3"
                android:layout_row="0"
                android:text="@{team.dataRate}"
                android:textColor="@color/white_text"
                android:visibility="invisible"
                tools:text="7.589" />

            <TextView
                android:layout_column="2"
                android:layout_row="1"
                android:text="Volt:"
                android:textColor="@color/white_text" />

            <TextView
                android:layout_column="3"
                android:layout_row="1"
                android:textColor="@color/white_text"
                android:text="@{team.battery}"
                tools:text="12.32"/>

        </GridLayout>

    </android.support.v7.widget.CardView>

