<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/connection_radio_group"
            tools:context="com.fsilberberg.ftamonitor.view.testing.TestingConnectionStatus">

    <RadioButton
        android:id="@+id/disconnected_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/standard_padding"
        android:text="Disconnected"/>

    <RadioButton
        android:id="@+id/connecting_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/standard_padding"
        android:text="Connecting"/>

    <RadioButton
        android:id="@+id/reconnecting_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/standard_padding"
        android:text="Reconnecting"/>

    <RadioButton
        android:id="@+id/connected_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/standard_padding"
        android:text="Connected"/>
</RadioGroup>
