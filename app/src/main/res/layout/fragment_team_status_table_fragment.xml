<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.fsilberberg.ftamonitor.view.fieldmonitor.TeamStatusTableFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1,2,3,4,5,6">

            <!-- Table header -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Team Number -->
                <TextView
                    android:id="@+id/team_status_table_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/black_with_border"
                    android:gravity="center"
                    android:padding="@dimen/table_margin"
                    android:text="Team"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/medium_text_size"/>

                <!-- Voltage Number -->
                <TextView
                    android:id="@+id/team_status_table_voltage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/black_with_border"
                    android:contentDescription="Robot battery voltage"
                    android:gravity="center"
                    android:padding="@dimen/table_margin"
                    android:text="Volt"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/medium_text_size"/>

                <!-- Enabled -->
                <TextView
                    android:id="@+id/team_status_table_enable_status"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/black_with_border"
                    android:contentDescription="Robot Enabled Status"
                    android:gravity="center"
                    android:padding="@dimen/table_margin"
                    android:text="En"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/medium_text_size"/>

                <!-- Network Information -->

                <TextView
                    android:id="@+id/team_status_table_bandwidth"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/black_with_border"
                    android:contentDescription="Bandwidth Usage"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/table_margin"
                    android:text="BW"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/medium_text_size"/>

                <TextView
                    android:id="@+id/team_status_table_missed_packets"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/black_with_border"
                    android:contentDescription="Missed Packets"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/table_margin"
                    android:text="MP"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/medium_text_size"/>

                <TextView
                    android:id="@+id/team_status_table_signal_quality"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/black_with_border"
                    android:contentDescription="Bandwidth Usage"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/table_margin"
                    android:text="SQ"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/medium_text_size"/>

                <TextView
                    android:id="@+id/team_status_table_signal_strength"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/black_with_border"
                    android:contentDescription="Missed Packets"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/table_margin"
                    android:text="SS"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/medium_text_size"/>

            </TableRow>
        </TableLayout>

        <!-- Blue 1 -->
        <FrameLayout
            android:id="@+id/team_status_table_blue1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Blue 2 -->
        <FrameLayout
            android:id="@+id/team_status_table_blue2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Blue 3 -->
        <FrameLayout
            android:id="@+id/team_status_table_blue3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Red 1 -->
        <FrameLayout
            android:id="@+id/team_status_table_red1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Red 2 -->
        <FrameLayout
            android:id="@+id/team_status_table_red2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Red 3 -->
        <FrameLayout
            android:id="@+id/team_status_table_red3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</FrameLayout>
